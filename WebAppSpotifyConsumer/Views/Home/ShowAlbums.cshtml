<table style="border-style:2px solid black; width:80%">
    <caption><h1>Albums</h1></caption>
    
    
        <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Release Date</th>
            <th>Number Of Tracks</th>
            <th>Popularity</th>
        </tr>
    
     

            @if (ViewBag.AlbumNames != null)
            {
                for (int i=0; i<5; i++)
                //foreach (string albums in ViewBag.AlbumNames)
                {
                    <tr>
                        
                        <td>@ViewBag.AlbumNames[i]</td>
                        <td>@ViewBag.albumArtist[i]</td>
                        <td>@ViewBag.AlbumReleaseDate[i]</td>
                        <td>@ViewBag.NumberOfTracks[i]</td>
                        <td>@ViewBag.Popularity[i]</td>
                    </tr>

                }

            }




</table>
